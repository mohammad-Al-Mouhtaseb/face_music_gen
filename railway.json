{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "gunicorn musicproject.wsgi --timeout 1200000 && !pip install git+https://github.com/facebookresearch/audiocraft.git && !apt-get install ffmpeg",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}